---
import Information from "./Information.astro";
---
  
<div class="block">
	<div class="circle"></div>
	<Information 
	name="GAMER PLACE" 
	info="Lorem ipsum dolor sit amet consectetur adipisicing elit. Suscipit ipsam, nobis omnis vitae ullam dicta nihil. Minus consequuntur saepe aperiam nulla optio reprehenderit beatae libero dolor? Id nemo minus praesentium."
	price="START $39.8"
	/>
</div>






  <style>
	.block {
		width: 100%;
		height: 100vh;
		padding: 0;
		margin: 0;
		position: relative;
		/* background-color: #0000006e; */
		background: url('https://images.unsplash.com/photo-1511512578047-dfb367046420?q=80&w=1471&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
		background-size: cover;
		background-repeat: no-repeat;
		background-position: center;
	}
	.circle {
		width: 1400px;
		height: 1400px;
		background-color: #ffffff;
		border-top: 100px solid #a612b6;
		border-bottom: 100px solid #a612b6;
		box-shadow: 0 0 10px 1px inset #000;
		border-radius: 50%;
		position: absolute;
		top: -300px;
		right: -520px;
		animation: rotate 3s linear infinite;
	}
	@keyframes rotate {
        0% {
			transform: rotate(0);
        }
        100% {
            transform: rotate(180deg);
        }
    }

  </style>
  